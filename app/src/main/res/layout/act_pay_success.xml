<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background_f2"
              android:orientation="vertical"
    >

    <include layout="@layout/app_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/blue"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:src="@drawable/img22"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付成功"
                android:textColor="@color/white"
                android:textSize="20sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="您已成功支付，等待飞首接单"
                android:textColor="@color/white"
                android:textSize="13sp"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="30dp"
        >
        <com.github.customview.MyTextView
            android:layout_width="120dp"
            android:layout_height="36dp"
            android:text="查看订单"
            android:textColor="@color/blue"
            android:gravity="center"
            app:my_tv_border_width="2px"
            app:my_tv_border_color="@color/blue"
            android:layout_marginRight="30dp"
            app:my_tv_corner_radius="4dp"
            app:my_tv_press="@color/gray_press"
            />
        <com.github.customview.MyTextView
            android:layout_width="120dp"
            android:layout_height="36dp"
            android:text="返回首页"
            android:textColor="@color/white"
            android:gravity="center"
            app:my_tv_solid="@color/blue"
            app:my_tv_press="@color/blue_press"
            app:my_tv_corner_radius="4dp"
            />
    </LinearLayout>
</LinearLayout>