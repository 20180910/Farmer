                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="5"
                        android:text="农户姓名"
                        android:textSize="15sp"
                        />

                    <TextView
                        android:id="@+id/tv_xia_order_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        tools:text="范雷"
                        android:textSize="15sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="2px"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="5"
                        android:text="联系方式"
                        android:textSize="15sp"
                        />

                    <TextView
                        android:id="@+id/tv_xia_order_phone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        tools:text="16589456231"
                        android:textSize="15sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_xiadan_select_other_weizhi"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="2px"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="位置"
                        android:textSize="15sp"
                        android:ems="5"
                        />
                    <TextView
                        android:id="@+id/tv_xia_order_weizhi"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        tools:text="上海市普陀区安曼新城"
                        android:hint="点击完善位置信息"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:ellipsize="end"
                        />
                    <!--<ImageView
                        android:layout_width="10dp"
                        android:layout_height="18dp"
                        android:src="@drawable/img58"
                        />-->
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="2px"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="5"
                        android:text="作物类型"
                        android:textSize="15sp"
                        />

                    <TextView
                        android:id="@+id/tv_xiadan_zuowu"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:hint="请选择作物"
                        android:textSize="15sp"
                        android:gravity="center_vertical"
                        />
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="18dp"
                        android:src="@drawable/img58"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_xiadan_select_other_farmer"
