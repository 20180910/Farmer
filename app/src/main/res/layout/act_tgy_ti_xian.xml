<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background_f2"
    >
<include layout="@layout/app_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="账户余额"
            android:drawableLeft="@drawable/img61"
            android:gravity="center_vertical"
            android:drawablePadding="10dp"
            />
        <TextView
            android:id="@+id/et_tgy_tx_account_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="¥400.00"
            android:textColor="@color/blue"
            android:textSize="17sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="@color/white"
        >
        <com.github.customview.MyLinearLayout
            android:id="@+id/ll_tgy_tixian"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:my_ll_solid="#f5f5f5"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            app:my_ll_corner_radius="4dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="到账银行卡"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:id="@+id/iv_tgy_tx_bank"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    tools:src="@drawable/img48"
                    android:layout_marginRight="10dp"
                    />
                <TextView
                    android:id="@+id/tv_tgy_tx_accout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="中国银行(9908)"
                    android:textSize="16sp"
                    android:textColor="@color/gray_33"
                    android:gravity="center_vertical"
                    />
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img55"
                />
        </com.github.customview.MyLinearLayout>
        <com.github.customview.MyLinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:my_ll_solid="#f5f5f5"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            app:my_ll_corner_radius="4dp"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提现金额"
                android:ems="6"
                />
            <EditText
                android:id="@+id/et_tgy_tx_money"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                tools:hint="当前最多提现¥400.00"
                android:textSize="13sp"
                android:textColorHint="#cccccc"
                android:inputType="numberDecimal"
                android:imeOptions="actionNext"
                android:maxLines="1"
                />
        </com.github.customview.MyLinearLayout>
        <com.github.customview.MyTextView
            android:id="@+id/tv_tgy_tx_commit"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:gravity="center"
            app:my_tv_solid="@color/blue"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            app:my_tv_corner_radius="4dp"
            android:layout_marginTop="10dp"
            android:text="申请提现"
            android:textColor="@color/white"
            app:my_tv_press="@color/blue_press"
            />
    </LinearLayout>
</LinearLayout>