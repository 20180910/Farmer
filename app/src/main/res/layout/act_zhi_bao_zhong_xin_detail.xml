<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:tools="http://schemas.android.com/tools"
              android:background="@color/background_f2"
              android:orientation="vertical"
    >

    <include layout="@layout/app_title"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fillViewport="true"
        >

        <com.zhizhong.farmer.view.ProgressLayout
            android:id="@id/pl_load"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                >

                <TextView
                    android:id="@+id/tv_zhibao_detail_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    tools:text="要把特色优势转化为经济优势和发展优势"
                    android:textColor="@color/gray_33"
                    android:textSize="17sp"
                    />

                <TextView
                    android:id="@+id/tv_zhibao_detail_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    tools:text="2017/06/10"
                    android:textColor="@color/gray_99"
                    />

                <WebView
                    android:id="@+id/wv_zhibao_detail_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    />
            </LinearLayout>
        </com.zhizhong.farmer.view.ProgressLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>