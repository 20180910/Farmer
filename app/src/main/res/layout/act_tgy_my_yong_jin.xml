<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background_f2"
    >
<include layout="@layout/app_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/blue"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="佣金金额"
            android:textColor="@color/white"
            />
<com.github.customview.MyLinearLayout
    android:layout_width="94dp"
    android:layout_height="94dp"
    android:gravity="center"
    app:my_ll_solid="#ACEFFD"
    app:my_ll_corner_radius="47dp"
    >
<com.github.customview.MyTextView
    android:layout_width="84dp"
    android:layout_height="84dp"
    android:text="¥299.32"
    android:gravity="center"
    app:my_tv_solid="@color/white"
    android:textColor="@color/blue"
    app:my_tv_corner_radius="42dp"
    />
</com.github.customview.MyLinearLayout>
    </LinearLayout>
    <com.github.customview.MyTextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="立即提现"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        app:my_tv_solid="@color/blue"
        app:my_tv_press="@color/blue_press"
        app:my_tv_corner_radius="4dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        >

        <View
            android:layout_width="4dp"
            android:layout_height="20dp"
            android:background="@color/blue"
            />

        <View
            android:layout_width="2dp"
            android:layout_height="20dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="10dp"
            android:background="@color/blue"
            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="佣金明细"
            android:textColor="@color/gray_33"
            android:textSize="14sp"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_tgy_my_yong_jin"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
    </android.support.v7.widget.RecyclerView>
</LinearLayout>