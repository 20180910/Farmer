<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background_f2"
    >
<include layout="@layout/app_title"/>
    <com.zhizhong.farmer.view.ProgressLayout
        android:id="@id/pl_load"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <com.github.customview.MyEditText
                android:id="@+id/et_city_search"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                app:my_et_solid="@color/white"
                app:my_et_corner_radius="20dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:hint="请输入城市区县或首字母查询"
                android:textSize="15sp"
                android:imeOptions="actionDone"
                android:inputType="text"
                />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:gravity="center_vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="热门城市"
                            android:textColor="@color/gray_33"
                            />
                        <com.github.customview.MyTextView
                            android:id="@+id/tv_city_select_province"
                            android:layout_width="wrap_content"
                            android:maxWidth="120dp"
                            android:layout_height="30dp"
                            android:text="选择省份"
                            android:gravity="center"
                            android:drawablePadding="10dp"
                            app:my_tv_solid="@color/background_f2"
                            app:my_tv_border_color="@color/blue"
                            app:my_tv_all_line="true"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:ems="6"
                            android:layout_marginLeft="20dp"
                            />
                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_hot_city"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </android.support.v7.widget.RecyclerView>
                    <android.support.v7.widget.RecyclerView
                        android:layout_marginTop="10dp"
                        android:id="@+id/rv_all_city"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </android.support.v7.widget.RecyclerView>
                </LinearLayout>
        </LinearLayout>
    </com.zhizhong.farmer.view.ProgressLayout>


</LinearLayout>