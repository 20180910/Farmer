<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background_f2"
    >
<com.github.customview.MyTextView
    android:id="@id/app_title"
    android:layout_width="match_parent"
    android:layout_height="@dimen/app_title_height"
    android:layout_gravity="center"
    android:maxLines="1"
    android:textColor="@color/gray_66"
    android:textSize="19sp"
    tools:text="title"
    android:gravity="center"
    app:my_tv_bottom_line="true"
    />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/c_press"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        >
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <com.github.customview.MyCheckBox
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="农药"
            app:my_checkbox_checked="@drawable/down_select"
            app:my_checkbox_normal="@drawable/down_normal"
            app:my_checkbox_checked_color="@color/blue"
            app:my_checkbox_normal_color="@color/gray_33"
            android:gravity="center"
            app:my_checkbox_checked_drawable="right"
            android:button="@null"
            android:textSize="14sp"
            android:drawablePadding="4dp"
            android:checked="true"
            />
        <View
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"/>
        <com.github.customview.MyCheckBox
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="种子"
            app:my_checkbox_checked="@drawable/down_select"
            app:my_checkbox_normal="@drawable/down_normal"
            app:my_checkbox_checked_color="@color/blue"
            app:my_checkbox_normal_color="@color/gray_33"
            android:gravity="center"
            app:my_checkbox_checked_drawable="right"
            android:button="@null"
            android:textSize="14sp"
            />
        <View
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"/>
        <com.github.customview.MyCheckBox
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="化肥"
            app:my_checkbox_checked="@drawable/down_select"
            app:my_checkbox_normal="@drawable/down_normal"
            app:my_checkbox_checked_color="@color/blue"
            app:my_checkbox_normal_color="@color/gray_33"
            android:gravity="center"
            app:my_checkbox_checked_drawable="right"
            android:button="@null"
            android:textSize="14sp"
            />
        <View
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"/>
        <com.github.customview.MyCheckBox
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="机械"
            app:my_checkbox_checked="@drawable/down_select"
            app:my_checkbox_normal="@drawable/down_normal"
            app:my_checkbox_checked_color="@color/blue"
            app:my_checkbox_normal_color="@color/gray_33"
            android:gravity="center"
            app:my_checkbox_checked_drawable="right"
            android:button="@null"
            android:textSize="14sp"
            />
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_zi_xun"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    </android.support.v7.widget.RecyclerView>
</LinearLayout>